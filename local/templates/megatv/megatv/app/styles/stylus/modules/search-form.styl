.search-form {
  position relative
  width 35px
  min-height 35px
  overflow hidden

  transition width .3s ease-in-out

  &:hover {
    width 310px

    @media (max-width: 1500px) {
      width 15%
    }
    @media (max-width: 1366px) {
      width 10%
    }

    .form-control {
      opacity 1
    }
  }



