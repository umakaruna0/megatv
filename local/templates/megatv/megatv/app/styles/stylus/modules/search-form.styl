  &.is-show-results {
    background-color #f7f7f7
    box-shadow -5px 5px 5px rgba(0,0,0,.13)
    animation searchResultsAnimation 1.5s cubic-bezier(.39,1.31,.28,1)
  }

  .form-group {
    margin-bottom 0

    .form-control-feedback {
      height 35px
      width 35px
      line-height 35px

      .icon-search {
        vertical-align middle
      }
    }
  }
  .form-control {
    border-color brand-primary
    height 35px
    opacity 0
    max-width 100%
    line-height 1.3
    padding-top 7px
    padding-bottom 7px
    padding-left 50px
    padding-right 0

    transition all .3s ease-in-out

    &:focus {
      border-color mix(brand-primary, #000, 95%)
    }
  }
  .form-control-feedback {
    right auto
    left 0
  }
  .search-result {
    clearfix()
    border-bottom 1px solid #bcbcbc
    padding-bottom 14px
    text-decoration none
    display block

    & + .search-result {
      padding-top 14px
    }
    &:last-child {
      border-bottom none
      padding-bottom 0
    }
    &:hover {
      .result-title {
        color mix(#000, #fff, 85%)
      }
    }

    .image-holder {
      display block
      float left
      width 60px
      height 60px

      &.is-empty {
        background url(../img/static/strikeout-circle.svg) no-repeat center/30px 30px #e5e5e5
      }
    }
    .info-col {
      margin-left 79px
      height 60px
      display flex
      flex-direction column
      justify-content center
    }
    .publish-date {
      font-size 1.2rem
      line-height 1
      color rgba(0,0,0,.4)
      margin-bottom 3px
    }
    .result-title {
      color #000
    }
  }
}


