//
// Select2
// -------------------------------------------------- //


.select2-container {
    display: inline-block;
    margin: 0;
    position: relative;
    vertical-align: middle;

    .select2-selection--single {
        cursor: pointer;
        display: block;
        height: 40px;
        user-select: none;

        &:focus {
            outline: 0;
        }

        .select2-selection__rendered {
            display: block;
            padding-left: 37px;
            padding-right: 33px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            line-height: 3.6rem;
            color #000
        }
    }
    .select2-search--inline {
        float: left;

        .select2-search__field {
            border: none;
            font-size: 100%;
            margin-top: 5px;

            &::-webkit-search-cancel-button {
                -webkit-appearance: none;
            }
        }
    }
}

.select2-dropdown {
    background-color: #fff;
    border: 2px solid #226dd8;
    display: block;
    position: absolute;
    left: -100000px;
    width: 100%;
    z-index: 5051;
    transform-origin center top
    animation selectDropdownAnimation .3s cubic-bezier(.39,1.31,.28,1)
}

.select2-results {
    display: block;
}

.select2-results__options {
    list-style: none;
    margin: 0;
    padding: 0;
}

.select2-results__option {
    padding: 11px 12px;
    line-height: 1.6rem;
    user-select: none;
    color #000
}
.select2-results__option[aria-selected] {
    cursor: pointer;
}

.select2-search--dropdown {
    display: block;
    padding: 4px;

    .select2-search__field {
        padding: 4px;
        width: 100%;

        &::-webkit-search-cancel-button {
            -webkit-appearance: none;
        }
        &:focus {
            outline none
        }
    }
    &.select2-search--hide {
        display: none;
    }
}

.select2-close-mask {
    border: 0;
    margin: 0;
    padding: 0;
    display: block;
    position: fixed;
    left: 0;
    top: 0;
    min-height: 100%;
    min-width: 100%;
    height: auto;
    width: auto;
    opacity: 0;
    z-index: 99;
    background-color: #fff;
}

.select2-hidden-accessible {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    top 0
    left 0
    position: absolute;
    width: 1px;
}

// Default skin

.select2-container--default {
    .select2-search--dropdown {
        display none
    }
    .select2-selection--single {
        background-color rgba(255,255,255,.19)
        border 2px solid #fff
        height 50px
        transition border-color .3s cubic-bezier(.39,1.31,.28,1)

        .select2-selection__rendered {
            color #fff
            line-height 4.6rem
            padding-left 18px
            padding-right 45px

            > span {
                display inline-block
                border-bottom 1px dotted
                line-height 1.9rem
            }
        }
        .select2-selection__clear {
            cursor: pointer;
            float: right;
            font-weight: bold;
        }
        .select2-selection__placeholder {
            color: #fff;
        }
        .select2-selection__arrow {
            height: 46px;
            width: 45px;
            position: absolute;
            top: 2px;
            right: 2px;

            b {
                display block
                right 0
                top 50%
                background-image url("data:image/svg+xml;base64,")
                background-repeat no-repeat
                background-position center
                background-size 20px 10px
                position absolute
                margin-top -23px
                width 45px
                height 46px
            }
        }
    }

    .select2-results__option--highlighted[aria-selected] {
        background-color mix(brand-primary, #fff, 90%)
        color white
        font-weight 700
    }
    .select2-results__group {
        cursor: default;
        display: block;
        padding: 6px;
    }
    .select2-search--dropdown .select2-search__field {
        border: 2px solid #a2a2a2;
    }
    .select2-search--inline .select2-search__field {
        background: transparent;
        border: none;
        outline: 0;
    }
    .select2-results > .select2-results__options {
        max-height: 200px;
        overflow-y: auto;
    }
    .select2-results__option[role=group] {
        padding: 0;
    }
    .select2-results__option[aria-disabled=true] {
        color: #999;
    }
    .select2-results__option[aria-selected=true] {
        background-color brand-primary
        color #fff
        font-weight 700
    }

    .select2-results__option {
        .select2-results__option {
            padding-left: 1em;

            .select2-results__group {
                padding-left: 0;
            }

            .select2-results__option {
                margin-left: -1em;
                padding-left: 2em;

                .select2-results__option {
                    margin-left: -2em;
                    padding-left: 3em;
                }
            }
        }
    }

    &.select2-container--disabled {
        .select2-selection--single {
            background-color: #eee;
            cursor: default;

            .select2-selection__clear {
                display: none;
            }
            .select2-selection__choice__remove {
                display: none;
            }
        }
    }
}

